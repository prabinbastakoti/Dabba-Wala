      <h1 class="heading">Connect and Share Your Culinary Adventures!</h1>
    </div>
    <div class="toggleCart">
      <div class="topSection">
        <h1>Cart</h1>
        <img src="/1.webp" alt="" class="cross" onclick="hideCart()" />
      </div>

      <div class="leftSection"></div>
      <div class="RigthSection">
        <h1>Payment Information</h1>
        <form action="">
          <label for="card">
            <input type="text" placeholder="Card Number" />
          </label>
          <label for="expiry">
            <input type="text" placeholder="Expiry Date (MM/YY)" />
          </label>
          <label for="cvv">
            <input type="text" placeholder="CVV" />
          </label>
          <label for="name">
            <input type="text" placeholder="Name on Card" />
          </label>
          <button class="payButton" onclick="successPurchase()">Pay Now</button>
        </form>
      </div>
    </div>
    <script src="/js/index.js" defer></script>
  </body>
</html>
